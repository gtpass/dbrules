{
  "version": 1,
  "rules": [
    {
      "domain": [
        "clock.isc.org",
        "ntp.fiord.ru",
        "ntp.nat.ms",
        "ntp.nic.cz",
        "ntp.nict.jp",
        "ntp.ripe.net",
        "ntp.se",
        "ntp.ufe.cz",
        "pool.ntp.org",
        "time.cloudflare.com",
        "time.nrc.ca",
        "time.windows.com"
      ],
      "domain_suffix": [
        ".clock.isc.org",
        ".ntp.fiord.ru",
        ".ntp.nat.ms",
        ".ntp.nic.cz",
        ".ntp.nict.jp",
        ".ntp.ripe.net",
        ".ntp.se",
        ".ntp.ufe.cz",
        ".pool.ntp.org",
        ".time.cloudflare.com",
        ".time.nrc.ca",
        ".time.windows.com"
      ],
      "domain_regex": [
        "^((((ut1-wwv)|(ntp\\-(b|d|wwv))|(time(\\-(([a-e]\\-(g|b))|([a-e]\\-wwv)))?)).nist.gov)|((ntp-c|ut1-time)|(utcnist(2|3)?)).colorado.edu)$",
        "^ntp[0-7].ntp-servers.net$",
        "^time(.euro)?.apple.com$",
        "^time([1-4])?.google.com$",
        "^time([1-5])?.facebook.com$"
      ]
    }
  ]
}
